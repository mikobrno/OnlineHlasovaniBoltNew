############################################
# Nhost konfigurace
############################################
# Nhost URLs (správný formát: [region].[subdomain].nhost.run)
VITE_NHOST_BACKEND_URL=https://eu-central-1.your-subdomain.nhost.run
NHOST_GRAPHQL_URL=https://eu-central-1.your-subdomain.nhost.run/v1/graphql

# Admin Secret pro Hasura/GraphQL operace
NHOST_ADMIN_SECRET=your-admin-secret  # Získáte v Nhost Admin Console

# Legacy proměnné - ponecháno pro zpětnou kompatibilitu
VITE_NHOST_SUBDOMAIN=your-subdomain
VITE_NHOST_REGION=eu-central-1

# SMTP konfigurace pro Nhost Email Function
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
MAIL_FROM=noreply@yourdomain.com

# (VOLITELNÉ) další integrace mohou následovat níže

############################################
# PŮVODNÍ Supabase (NEPOUŽÍVAT – ponecháno jen jako reference)
# VITE_SUPABASE_URL=your_supabase_url_here
# VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Google Gemini API for AI features
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# SMSbrana.cz credentials for SMS verification
VITE_SMSBRANA_LOGIN=your_smsbrana_login
VITE_SMSBRANA_PASSWORD=your_smsbrana_password

# Gmail API (OAuth2) for sending emails via Gmail
# Get these from Google Cloud Console + OAuth Playground
VITE_GOOGLE_CLIENT_ID=
VITE_GOOGLE_CLIENT_SECRET=
VITE_GOOGLE_REFRESH_TOKEN=
VITE_GOOGLE_REDIRECT_URI=https://developers.google.com/oauthplayground

# Mailjet (preferred if configured)
# Set in Netlify/Env: used by serverless email function
# MAILJET_API_KEY=
# MAILJET_API_SECRET=
# MAILJET_FROM_EMAIL=notify@your-domain.com
# MAILJET_FROM_NAME=Online Hlasování